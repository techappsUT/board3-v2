#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
npx --no -- commitlint --edit $1

# Check commit message for sensitive information
echo "ğŸ” Checking commit message for sensitive information..."
if grep -iE "(password|secret|key|token|api_key)" "$1"; then
  echo "âŒ Commit message contains sensitive information!"
  echo "Please remove secrets from your commit message."
  exit 1
fi

echo "âœ… Commit message validation passed!"