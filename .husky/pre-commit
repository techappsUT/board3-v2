#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check for secrets
echo "ğŸ”’ Checking for secrets..."
if grep -r --include="*.ts" --include="*.js" --include="*.tsx" --include="*.jsx" \
  -E "(password|secret|key|token).*=.*['\"][^'\"]{8,}" . --exclude-dir=node_modules --exclude-dir=.git; then
  echo "âŒ Potential secrets found! Please remove them before committing."
  exit 1
fi

# Type checking
echo "ğŸ“˜ Running TypeScript type checking..."
npm run type-check

# Linting
echo "ğŸ”§ Running ESLint..."
npm run lint

# Security linting
echo "ğŸ›¡ï¸ Running security checks..."
npm run test:security

# Format check
echo "ğŸ’… Checking code formatting..."
npm run format:check

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:unit

# Staged files linting
echo "ğŸ¯ Linting staged files..."
npx lint-staged

echo "âœ… All pre-commit checks passed!"