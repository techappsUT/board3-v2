#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üöÄ Running pre-push checks..."

# Build check
echo "üèóÔ∏è Running build check..."
npm run build

# Full test suite
echo "üß™ Running full test suite..."
npm run test

# Security audit
echo "üîí Running security audit..."
npm audit --audit-level=moderate

# Check for TODO/FIXME in production code
echo "üìù Checking for TODO/FIXME comments..."
if git diff --cached --name-only | grep -E '\.(ts|tsx|js|jsx)$' | xargs grep -l "TODO\|FIXME" 2>/dev/null; then
  echo "‚ö†Ô∏è Warning: TODO/FIXME comments found in staged files"
  echo "Consider addressing these before pushing to production"
  # Don't fail, just warn
fi

echo "‚úÖ All pre-push checks passed!"