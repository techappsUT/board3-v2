# Database Configuration
DATABASE_URL="postgresql://board3:password@localhost:5432/board3_dev?schema=public"
DATABASE_CONNECTION_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-jwt-key-change-in-production-must-be-long-and-secure
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-different-from-access-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys (AES-256)
ENCRYPTION_KEY=your-32-character-encryption-key-here
TERRAFORM_STATE_ENCRYPTION_KEY=another-32-character-key-for-terraform

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Cloud Provider API Keys (encrypted)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2

AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=
AZURE_SUBSCRIPTION_ID=

GCP_PROJECT_ID=
GCP_CLIENT_EMAIL=
GCP_PRIVATE_KEY=

# AI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=

# Security
CORS_ORIGINS=http://localhost:3000,https://app.board3.dev
TRUSTED_PROXIES=

# File Storage
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=json,yaml,tf,png,jpg,jpeg,svg

# Terraform Configuration
TERRAFORM_BINARY_PATH=/usr/local/bin/terraform
TERRAFORM_WORKSPACE_PATH=/tmp/board3-workspaces
TERRAFORM_STATE_BUCKET=board3-terraform-states