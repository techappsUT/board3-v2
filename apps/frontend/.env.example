# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Board3"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-min-32-chars

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Database (for NextAuth)
DATABASE_URL="postgresql://board3:password@localhost:5432/board3_dev"

# External Services
OPENAI_API_KEY=sk-your-openai-api-key-here

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here-min-32-chars

# Monitoring and Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-MEASUREMENT-ID
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_TERRAFORM=true

# Development Tools
ANALYZE=false
TURBO_TEAM=board3
TURBO_TOKEN=your-turbo-token-here