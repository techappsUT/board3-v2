{
  "name": "@board3/shared",
  "version": "1.0.0",
  "description": "Shared utilities and functions for Board3 project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "utilities",
    "shared",
    "board3",
    "typescript"
  ],
  "dependencies": {
    "crypto-js": "4.2.0",
    "date-fns": "3.0.6",
    "lodash": "4.17.21",
    "validator": "13.11.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/crypto-js": "4.2.2",
    "@types/jest": "29.5.11",
    "@types/lodash": "4.14.202",
    "@types/validator": "13.11.7",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/index.ts"
    ]
  }
}
