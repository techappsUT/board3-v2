{
  "name": "@board3/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for Board3 project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
