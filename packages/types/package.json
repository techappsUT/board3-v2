    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "types",
    "typescript",
    "board3",
    "shared"
  ],
  "devDependencies": {
    "typescript": "5.3.3"
  },
  "publishConfig": {
    "access": "restricted"
  }
}